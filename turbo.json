{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "AUTH_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "NEXTAUTH_URL",
    "DATABASE_URL",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "REMOTE_LOGGER",
    "DEBUG_LOGGER"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.local"]
    },
    "check:lint": {
      "dependsOn": ["^check:lint"],
      "cache": false
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "check:format": {
      "dependsOn": ["^check:format"]
    }
  }
}
